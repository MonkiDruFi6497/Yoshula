<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvFour"
        android:layout_width="353dp"
        android:layout_height="91dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"

        android:text="在這裡面在選擇一個和你上一個選擇的詞有相關性的!!"

        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/holo_blue_dark"
        android:text="猜出您心裡想的"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/btFour"
        app:layout_constraintStart_toStartOf="@+id/btFour"
        app:layout_constraintTop_toBottomOf="@+id/btFour" />

    <ImageView
        android:id="@+id/imgReturn"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icons_return" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.46" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="120dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <RadioGroup
        android:id="@+id/rgLeftFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="38dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4">

        <RadioButton
            android:id="@+id/rgLeftKnife"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小刀"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#f00"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rgLeftPyramid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="金字塔"
            android:textColor="#f00"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rgLeftSugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="砂糖"
            android:textColor="#f00"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rgLeftTortoise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="烏龜"
            android:textColor="#f00"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rgRightFout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/guideline4">

        <RadioButton
            android:id="@+id/rgRightPencil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="鉛筆"
            android:textColor="#f00"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rgRightUniverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="宇宙"
            android:textColor="#f00"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rgRightKennel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="狗窩"
            android:textColor="#f00"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rgRightTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="桌子"
            android:textColor="#f00"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RadioGroup>





</androidx.constraintlayout.widget.ConstraintLayout>